                            <div class="row">
                                <div class="col-lg-12 form_group">

                                    <input asp-for="Name" name="name" placeholder="Patient name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'"
                                           class="common_input form-control" required="" type="text">

                                    <input asp-for="Email" name="email" placeholder="Email address"
                                           onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'" class="common_input form-control"
                                           required="" type="email">

                                    <input asp-for="Password" name="password" placeholder="Password"
                                           onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter password'" class="common_input form-control"
                                           required="" type="password">

                                    <input asp-for="PhoneNo" name="phone" placeholder="Phone number"
                                           onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter phone number'" class="common_input form-control"
                                           required="" type="text">

                                    <input asp-for="BirthDate" name="subject" placeholder="Birth date" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter birthdate'"
                                           class="common_input mb-10 form-control" required="" type="date">

                                    <select asp-for="Gender" class="default-select">
                                        <option data-display="Gender">Gender</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                        <option value="3">Other</option>
                                    </select>
                                    @*<input name="subject" placeholder="Appointment date" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Subject'"
                                    class="common_input mb-10 form-control" required="" type="text">*@

                                    <textarea asp-for="PresentAddress" class="common_textarea form-control" name="presentaddress" placeholder="Present Address" onfocus="this.placeholder = ''"
                                              onblur="this.placeholder = 'Present address'" required=""></textarea>

                                    <textarea asp-for="PermanentAddress" class="common_textarea form-control" name="prmanentaddress" placeholder="Prmanent Address" onfocus="this.placeholder = ''"
                                              onblur="this.placeholder = 'Prmanent address'" required=""></textarea>
                                </div>
