
@{
    ViewData["Title"] = "CreateDoctorShedule";
}




@model DoctorsSchedule


@{
    ViewBag.Title = "Create Employee";
}

    <form enctype="multipart/form-data" asp-controller="Employees" asp-action="CreateDoctorShedule" method="post" class="mt-3">
        <div class="form-group row">
            <div class="col-sm-6">
                <div class="row">
                    <label asp-for="EmployeeId" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-7">
                        <select asp-for="EmployeeId" class="custom-select mr-sm-2"
                                asp-items="@(new SelectList(@ViewBag.EmployeeList,"Id","Name"))">
                            <option value="">Please Select</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                </div>
            </div>

        </div>
        <div class="form-group row">
            <label asp-for="Day" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Day" class="form-control" placeholder="BirthDate" readonly="@false" />
                @*<span asp-validation-for="JoiningDate" class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Time" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Time" class="form-control" placeholder="BirthDate" readonly="@false" />
                @*<span asp-validation-for="JoiningDate" class="text-danger"></span>*@
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }

    </form>
