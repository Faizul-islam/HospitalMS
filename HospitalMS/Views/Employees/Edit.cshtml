                    <input asp-for="BirthDate" class="form-control" placeholder="BirthDate" readonly="@false" />
                </div>
            </div>
        </div>
    </div>



    <div class="form-group row">
        <input hidden asp-for="Id" />
        <input hidden asp-for="ExistingPhotoPath" />
        <input hidden asp-for="PersonId" />
        <input hidden asp-for="SpecialtyId" />
        <input hidden asp-for="PositionId" />
