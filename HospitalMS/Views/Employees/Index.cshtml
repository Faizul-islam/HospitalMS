@model Employee

@{ 
    ViewData["Title"] = "Index";
}

<div>
    <a asp-controller="Employees" asp-action="Create" type="button" class="btn btn-primary btn-lg btn-block m-2" style="width:300px;">Create New Employee </a>

    <div class="card-deck">
        @foreach (var employee in Model.EmployeeList)
        {
            var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
            <div class="card m-3" style="min-width:18rem; max-width:30.5px;">
                <div class="card-header">
                    <h3 hidden>@employee.Id</h3>
                    <h3 hidden>@employee.PersonId</h3>
                    <h3 hidden>@employee.PositionId</h3>
                    <h3>@employee.Name</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id" asp-route-personid="@employee.PersonId" asp-route-positionid="@employee.PositionId" class="btn btn-primary m-1">View</a>
                    <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id" asp-route-personid="@employee.PersonId" asp-route-positionid="@employee.PositionId" class="btn btn-primary m-1">Edit</a>
                </div>
            </div>
        }
    </div>
</div>
